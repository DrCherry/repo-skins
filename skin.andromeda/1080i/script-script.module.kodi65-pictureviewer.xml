<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">5000</defaultcontrol>
    <include>DialogOpenClose</include>
    <controls>
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <texture>special://skin/backgrounds/default/background.png</texture>
        </control>
        <include>OverlayFull</include>
        <control type="image">
            <visible>!Container(5000).OnScrollPrevious + !Container(5000).OnScrollNext</visible>
            <include>Icon_Fade</include>
            <centerleft>50%</centerleft>
            <centertop>50%</centertop>
            <width>180</width>
            <height>180</height>
            <texture>OSD/loading.png</texture>
            <animation effect="rotate" center="auto" start="360" end="0" time="1500" loop="true" tween="circle" easing="inout" condition="true">Conditional</animation>
        </control>
        <control type="image">
            <visible>!Container(5000).OnScrollPrevious + !Container(5000).OnScrollNext</visible>
            <include>Icon_Fade</include>
            <centerleft>50%</centerleft>
            <centertop>50%</centertop>
            <width>180</width>
            <height>180</height>
            <texture>OSD/loading.png</texture>
            <animation effect="rotate" center="auto" start="360" end="0" time="750" loop="true" tween="sine" easing="in" condition="true">Conditional</animation>
        </control>
        <control type="list" id="5000">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <onleft>5000</onleft>
            <onright>5000</onright>
            <orientation>Horizontal</orientation>
            <itemlayout height="1080" width="1920">
                <control type="image">
                    <left>0</left>
                    <top>0</top>
                    <width>1920</width>
                    <height>1080</height>
                    <aspectratio>keep</aspectratio>
                    <texture>$INFO[ListItem.Art(original)]</texture>
                </control>
            </itemlayout>
            <focusedlayout height="1080" width="1920">
                <control type="image">
                    <left>0</left>
                    <top>0</top>
                    <width>1920</width>
                    <height>1080</height>
                    <aspectratio>keep</aspectratio>
                    <texture>$INFO[ListItem.Art(original)]</texture>
                </control>
            </focusedlayout>
        </control>
        <control type="button">
            <posx>1720</posx>
            <posy>200</posy>
            <width>200</width>
            <height>800</height>
            <include>HiddenButton</include>
            <onclick>Control.Move(5000,1)</onclick>
        </control>
        <control type="button">
            <posx>0</posx>
            <posy>200</posy>
            <width>200</width>
            <height>800</height>
            <include>HiddenButton</include>
            <onclick>Control.Move(5000,-1)</onclick>
        </control>
        <include>WindowClosingButton</include>
    </controls>
</window>
